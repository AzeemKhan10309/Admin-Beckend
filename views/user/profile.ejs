<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>My Profile</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f0f2f5;
            height: 100vh;
            width: 100vw;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            width: 90vw;
            height: 90vh;
            background-color: white;
            border-radius: 16px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
        }

        .alert {
            background: #d4edda;
            color: #155724;
            padding: 6px;
            font-size: 13px;
            border-radius: 4px;
            text-align: center;
            margin-bottom: 10px;
        }

        form {
            flex: 1;
            display: flex;
            gap: 40px;
            flex-direction: column;
        }

        .form-content {
            display: flex;
            gap: 40px;
            flex-grow: 1;
        }

        .form-column {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        label {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 4px;
            color: #555;
        }

        .field-block {
            display: flex;
            flex-direction: column;
        }

        .editable-field {
            padding: 8px 10px;
            font-size: 13px;
            border: 1px solid #ccc;
            border-radius: 6px;
            background: #fafafa;
            min-height: 32px;
            outline: none;
        }

        .editable-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 14px;
            color: #555;
        }

        .button-row {
            display: flex;
            gap: 10px;
            margin-top: 20px;
            justify-content: center;
        }

        button {
            flex: 1;
            padding: 10px;
            border: none;
            font-size: 14px;
            font-weight: bold;
            border-radius: 6px;
            cursor: pointer;
            max-width: 120px;
        }

        .save-btn {
            background-color: #4caf50;
            color: white;
        }

        .delete-btn {
            background-color: #e74c3c;
            color: white;
        }
    </style>
</head>

<body>
    <div class="container">
        <% if (message) { %>
            <div class="alert">
                <%= message %>
            </div>
            <% } %>

                <h1>My Profile</h1>

                <form id="profileForm" action="/api/users/update?_method=PUT" method="POST" onsubmit="syncFields()">
                    <div class="form-content">
                        <div class="form-column">
                            <div class="field-block">
                                <label>Username</label>
                                <div class="editable-field" contenteditable="true" id="usernameEditable">
                                    <%= user.username %>
                                </div>
                                <input type="hidden" name="username" id="username">
                            </div>

                            <div class="field-block">
                                <label>Email</label>
                                <div class="editable-field" contenteditable="true" id="emailEditable">
                                    <%= user.email %>
                                </div>
                                <input type="hidden" name="email" id="email">
                            </div>

                            <div class="field-block">
                                <label>Phone</label>
                                <div class="editable-field" contenteditable="true" id="phoneEditable">
                                    <%= user.phone %>
                                </div>
                                <input type="hidden" name="phone" id="phone">
                            </div>

                            <div class="field-block">
                                <label>City</label>
                                <div class="editable-field" contenteditable="true" id="cityEditable">
                                    <%= user.address?.city || '' %>
                                </div>
                                <input type="hidden" name="city" id="city">
                            </div>
                        </div>

                        <div class="form-column">
                            <div class="field-block">
                                <label>Password</label>
                                <div class="editable-wrapper">
                                    <div class="editable-field" contenteditable="true" id="passwordEditable">‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢
                                    </div>
                                    <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
                                </div>
                                <input type="hidden" name="password" id="password">
                            </div>

                            <div class="field-block">
                                <label>Street</label>
                                <div class="editable-field" contenteditable="true" id="streetEditable">
                                    <%= user.address?.street || '' %>
                                </div>
                                <input type="hidden" name="street" id="street">
                            </div>

                            <div class="field-block">
                                <label>State</label>
                                <div class="editable-field" contenteditable="true" id="stateEditable">
                                    <%= user.address?.state || '' %>
                                </div>
                                <input type="hidden" name="state" id="state">
                            </div>

                            <div class="field-block">
                                <label>ZIP</label>
                                <div class="editable-field" contenteditable="true" id="zipEditable">
                                    <%= user.address?.zip || '' %>
                                </div>
                                <input type="hidden" name="zip" id="zip">
                            </div>
                        </div>
                    </div>

                    <div class="button-row">
                        <button type="submit" class="save-btn">Save</button>
                    </div>
                </form>

                <form action="/user/delete" method="POST"
                    onsubmit="return confirm('Are you sure you want to delete your account?');"
                    style="margin-top: 10px; max-width: 120px; margin-left: auto; margin-right: auto;">
                    <button type="submit" class="delete-btn">Delete</button>
                </form>
                <div class="actions">
                    <a  class="save-btn" href="/">Back</a>
                    </div>
    </div>

    <script>
        function syncFields() {
            const fields = ['username', 'email', 'password', 'phone', 'street', 'city', 'state', 'zip'];
            fields.forEach(field => {
                const editable = document.getElementById(field + 'Editable');
                const hidden = document.getElementById(field);
                hidden.value = editable.textContent.trim();
            });
        }

        let isPasswordVisible = false;
        let actualPassword = '';
        const passwordEditable = document.getElementById('passwordEditable');
        const passwordInput = document.getElementById('password');

        passwordEditable.addEventListener('input', () => {
            const text = passwordEditable.innerText;
            if (!isPasswordVisible) {
                actualPassword = text;
                passwordEditable.innerText = '‚Ä¢'.repeat(text.length);
                placeCaretAtEnd(passwordEditable);
            } else {
                actualPassword = text;
            }
            passwordInput.value = actualPassword;
        });

        function togglePassword() {
            isPasswordVisible = !isPasswordVisible;
            passwordEditable.innerText = isPasswordVisible ? actualPassword : '‚Ä¢'.repeat(actualPassword.length);
            placeCaretAtEnd(passwordEditable);
        }

        function placeCaretAtEnd(el) {
            const range = document.createRange();
            const sel = window.getSelection();
            range.selectNodeContents(el);
            range.collapse(false);
            sel.removeAllRanges();
            sel.addRange(range);
            el.focus();
        }
    </script>
</body>

</html>