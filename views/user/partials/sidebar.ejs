<aside class="categories-sidebar">
    <h3>Categories</h3>
    <ul>
        <% categories.forEach(cat=> { %>
            <li>
                <a href="/?category=<%= cat._id %>">
                    <%= cat.name %>
                </a>
            </li>
            <% }) %>
    </ul>
</aside>

<style>
    .categories-sidebar {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        padding: 20px;
        width: 220px;
        border-radius: 8px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .categories-sidebar h3 {
        margin-bottom: 15px;
        font-size: 1.25rem;
        color: #333;
        border-bottom: 2px solid #5a9;
        padding-bottom: 8px;
    }

    .categories-sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .categories-sidebar ul li {
        margin-bottom: 12px;
    }

    .categories-sidebar ul li a {
        text-decoration: none;
        color: #4a90e2;
        font-weight: 600;
        padding: 6px 10px;
        display: block;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .categories-sidebar ul li a:hover,
    .categories-sidebar ul li a:focus {
        background-color: #4a90e2;
        color: white;
        outline: none;
    }
</style>
